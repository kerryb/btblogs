<% form_for @blog do |f|
  field_set_tag "Add a Blog" do %>
    <%= f.text_field :owner_name, :label => 'Your name', :required => true %>
    <%= f.text_field :owner_email, :label => 'Your e-mail address', :required => true %>
    <%= f.text_field :html_uri, :label => 'Blog URL', :required => true %>
    <%= f.submit_and_cancel("save", "cancel") %>
  <% end %>
<% end %>
